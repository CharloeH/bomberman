<Window x:Class="BomberMan_2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BomberMan_2._0"
        mc:Ignorable="d"
        Title="Bomberman" Height="700" Width="1000" >
    <Canvas x:Name="canvas">
        <Button x:Name="btnStart" Height="100" Width="250" Canvas.Left="360" Canvas.Top="100" Content="Start" FontSize="35" Click="BtnStart_Click"/>
        <Button x:Name="btnOptions"  Height="100" Width="250" Canvas.Left="360" Canvas.Top="250" Content="Options" FontSize="35" Click="BtnOptions_Click"/>
    </Canvas>
</Window>
